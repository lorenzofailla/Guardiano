<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_permissions_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.lore_f.guardiano.PermissionsRequestActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:orientation="vertical">
    android:orientation="vertical"

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowOrderPreserved="false"
        android:columnCount="2"
        android:rowCount="5">

        <TextView
            android:text="@string/PermissionsRequestActivity_permissionCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___PERMISSION_CAMERA"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="left|top"/>

        <TextView
            android:text="@string/PermissionsRequestActivity_permissionRecordAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___PERMISSION_RECORD_AUDIO"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="left|top"/>

        <TextView
            android:text="@string/PermissionsRequestActivity_permissionWriteExternalStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___PERMISSION_WRITE_EXTERNAL_STORAGE"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="left|top"/>

        <TextView
            android:text="@string/PermissionsRequestActivity_permissionInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___PERMISSION_INTERNET"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="left|top"/>

        <TextView
            android:text="@string/PermissionsRequestActivity_permissionDenied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___PERMISSION_CAMERA_STATUS"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="left|top"
            android:paddingLeft="5dp" />

        <TextView
            android:text="@string/PermissionsRequestActivity_permissionDenied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___PERMISSION_RECORD_AUDIO_STATUS"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="left|top"
            android:paddingLeft="5dp"/>

        <TextView
            android:text="@string/PermissionsRequestActivity_permissionDenied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___PERMISSION_WRITE_EXTERNAL_STORAGE_STATUS"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="left|top"
            android:paddingLeft="5dp"/>

        <TextView
            android:text="@string/PermissionsRequestActivity_permissionDenied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___PERMISSION_INTERNET_STATUS"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_gravity="left|top"
            android:paddingLeft="5dp"/>

        <TextView
            android:text="@string/PermissionsRequestActivity_libraryOpenCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___LIBRARY_OPENCV"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_gravity="left|top"/>

        <TextView
            android:text="@string/PermissionsRequestActivity_libraryNotLoaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TXV___PERMISSIONSREQUEST___LIBRARY_OPENCV_STATUS"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_gravity="left|top"/>

    </GridLayout>

    <TextView
        android:text="@string/PermissionsRequestActivity_deviceDescriptionExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TXV___PERMISSIONSREQUEST___DEVICE_NAME_LABEL"

        android:layout_gravity="left|top"
        android:paddingLeft="5dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/ETX___PERMISSIONSREQUEST___DEVICE_NAME"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@+id/IBN___PERMISSIONSREQUEST___DEVICE_NAME_CONFIRM"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_set_as"
            android:id="@+id/IBN___PERMISSIONSREQUEST___DEVICE_NAME_CONFIRM"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>


</LinearLayout>



</RelativeLayout>
